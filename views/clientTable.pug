html
    body
        table
            tr
                th First Name
                th Last Name
                th Email
                th Address
                th Age
            each user, index in monUser
                tr
                    td #{user.firstName}
                    td #{user.lastName}
                    td #{user.email}
                    td #{user.address}
                    td #{user.age}
                        |
                        |
                        a(href=`/edit/${user._id}`) Edit
                        |
                        |
                        a(href=`/delete/${user._id}`) Delete
        div
            a(href="/newClient") New User